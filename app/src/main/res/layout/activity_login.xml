<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/login_svg"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:padding="10dp"
        android:paddingBottom="5dp"

        android:textSize="25dp"
        android:textColor="#1a374d"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Sign in to continue"
        android:textColor="#1a374d"
        android:padding="10dp"
        android:textSize="13dp"></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailText"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:hint="Username"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="2dp"
        android:background="@drawable/rounded_corner_view_grey"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordText"
        android:inputType="textPassword"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:hint="Password"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="2dp"
        android:background="@drawable/rounded_corner_view_grey"></EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="@color/white"
        android:background="@drawable/rounded_color_view_navy_blue"></Button>


</LinearLayout>