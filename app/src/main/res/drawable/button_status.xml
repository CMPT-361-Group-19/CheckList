<!-- res/drawable/button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button in normal state -->
    <item android:state_enabled="true" android:state_checked="false">
        <shape>
            <!-- Your normal background color or drawable -->
            <solid android:color="#FF9E9E9E" />
            <corners android:radius="16dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>

    <!-- Button in pressed or focused state -->
    <item android:state_enabled="true" android:state_checked="true" >
        <shape>
            <!-- Your pressed background color or drawable -->
            <solid android:color="@color/navy_blue" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default button color when not enabled -->
    <item>
        <shape>
            <!-- Your disabled background color or drawable -->
            <solid android:color="@color/navy_blue" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</selector>
